# Example environment variables for Caddyshack
# Copy this file to .env and modify the values as needed

# Port for the Caddyshack UI
CADDYSHACK_PORT=8080

# Timezone for backup timestamps and UI
TIMEZONE=America/New_York

# Location of your existing Caddyfile
CADDYFILE_LOCATION=./Caddyfile

# Caddy admin API endpoint (default is for Caddy running on host)
CADDY_ADMIN_ENDPOINT=http://host.docker.internal:2019
